# local config related to this specific server. var changes should occur here instead of the generic openam playbooks.

hostname: openam.firstpointglobal.com
timezone: Australia/Sydney

# TODO: find out why these vars can't be interpolated from group_vars or host_vars (only from the command line). makes it a "one size fits all" scenario when it comes to credentials and ansible connections for disparate servers
user: root
# TODO: find out why these variables are never interpolated, even from the command line
sudo: no
connection: fireball
gather_facts: no

artefact_dir: /opt/archive

java_home: /usr/lib/jvm/jre
java_opts: -Xmx1024m -XX:MaxPermSize=256m
java_package: java-1.6.0-openjdk

# container: tomcat
container_service: tomcat6
container_home: /usr/share/tomcat6
container_owner: tomcat
container_webapps: ${container_home}/webapps
# container_conf: ${container_home}/bin/setenv.sh
container_cache: ${container_home}/work/Catalina/localhost
